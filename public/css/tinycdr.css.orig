body {
  /* background:#163457 url(/images/bg/body_bg.png)  repeat-x scroll center top; */
  background:#0D231D;
  color:white;
  font-family:"Lucida Grande","Lucida Sans",lucida,verdana,sans-serif;
  font-size:12px;
  margin:0;
  padding:0;
  /* text-align:center; */
}
body * {
  margin:0;
  padding:0;
}
a {
  color:white;
}
a.gem {
  font-size:120%;
}
h1.code_title {
  font-family:Georgia;
  font-size:40px;
  font-weight:normal;
  margin-bottom:21px;
}
h1 {
  font-size: 52px;
}
h2 {
  font-family:Georgia;
  font-size:18px;
  font-weight:normal;
  line-height:110%;
  margin-bottom:0.7em;
  padding-top:0.3em;
}
h2 span {
  font-size:80%;
}
p {
  margin-bottom:0.9em;
}
ul {
  margin-bottom:1.5em;
  padding-left:25px;
}
ul li {
  line-height:135%;
  margin-bottom:1em;
}
img, a img {
  border:0 none;
}
#wrapper {
  background:transparent /* url(/images/bg/wrapper_bg.png) */ no-repeat scroll center top;
  margin-left:auto;
  margin-right:auto;
  width:960px;
}
#header {
  height:100px;
  padding-top:25px;
  background:#12322A
}
#main {
  min-height:400px;
  padding-bottom:20px;
  text-align:left;
  width:960px;
}
div.column {
  display:inline;
  float:left;
  min-height:250px;
  width:300px;
}
div#left.column, div#middle.column {
  margin-right:30px;
}
#footer {
  clear:both;
  width:100%;
}
#logo {
  height:100px;
  margin-bottom:15px;
  margin-left:auto;
  margin-right:auto;
  width:391px;
  color: #FFFFFF;
}
#logo h1 a {
  background:transparent /* url(/images/misc/logo.png) */ no-repeat scroll left top;
  display:block;
  height:100px;
  overflow:hidden;
  text-indent:-1000px;
  width:391px;
  color: #FFFFFF;
  font-size:18px;
}
p.tagline {
  font-size:18px;
  margin-bottom:15px;
  text-align:center;
}
#search {
  /* background-color:#182945; */
  background-color:#163E33; 
  margin-left:auto;
  margin-right:auto;
  padding:15px;
  width:500px;
}
#search form {
  margin-bottom:5px;
}
#search form input {
  font-size:18px;
  margin-right:5px;
  vertical-align:middle;
}
#search form input#s {
  border:1px solid #000000;
  color:#999999;
  font-weight:bold;
  padding:5px;
  width:200px;
}
#search form input#s span {
  color:#999999;
}
div.pagination {
  color:#4A6F97;
  font-size:13px;
  margin-bottom:30px;
  padding:10px 0;
  text-align:center;
}
div.pagination a, div.pagination span {
  padding:3px 2px;
}
div.pagination span.current {
  color:white;
  font-size:27px;
}
.lightblue {
  color:#345983;
}
.lighterblue {
  color:#95ABC3;
}
.small {
  font-size:85%;
}
p.no_margin {
  margin:0;
}
.rounded {
  -moz-border-radius-bottomleft:6px;
  -moz-border-radius-bottomright:6px;
  -moz-border-radius-topleft:6px;
  -moz-border-radius-topright:6px;
}
span.works, span.fails {
  -moz-border-radius-bottomleft:2px;
  -moz-border-radius-bottomright:2px;
  -moz-border-radius-topleft:2px;
  -moz-border-radius-topright:2px;
  color:white;
  font-size:10px;
  padding:2px 5px;
  text-transform:uppercase;
}
span.works {
  background-color:#66CC00;
}
span.fails {
  background-color:#CC0000;
}
span.white {
  color:white;
}
div.comment {
  /* background-color:#345983; */
  background-color:#216150; 
  color:#FFFFFF;
  margin-bottom:12px;
  max-width:600px;
  min-height:55px;
  padding:12px;
}
div.comment > p, div.comment blockquote {
  font-size:12px;
  margin-bottom:0;
  margin-left:65px;
}
div.comment p {
  line-height:160%;
}
img.gravatar {
  border:1px solid #95ABC3;
  display:inline;
  float:left;
  padding:1px;
}
div.fieldWithErrors {
  display:inline;
}
#new-comment-form div.fieldWithErrors input {
  border:2px solid red;
}
div.errorExplanation {
  background-color:#990000;
  border:2px solid red;
  padding:10px;
}
#flash_notice {
  background-color:green;
  border:1px solid #66CC00;
  margin-bottom:10px;
  padding:10px;
}
#flash_error {
  background-color:#CC0000;
  border:1px solid red;
  margin-bottom:10px;
  padding:10px;
}
dt {
  color:#95ABC3;
}
dd {
  line-height:150%;
  margin-bottom:0.9em;
}
#new-comment-form {
  -moz-border-radius-bottomleft:9px;
  -moz-border-radius-bottomright:9px;
  -moz-border-radius-topleft:9px;
  -moz-border-radius-topright:9px;
  background-color:#182945;
  margin-top:30px;
  padding:15px 25px;
  width:560px;
}
#new-comment-form label {
  font-size:11px;
  line-height:130%;
}
#new-comment-form input, #new-comment-form textarea {
  border:1px solid black;
  font-size:13px;
  margin-top:2px;
  padding:3px;
}
#new-comment-form .text_field {
  width:250px;
}
a.delete-comment {
  background:transparent /* url(/images/misc/recreate.gif) */ no-repeat scroll 0 0;
  color:#95ABC3;
  font-size:8pt;
  font-weight:bold;
  padding:2px 4px 4px 18px;
  text-decoration:none;
  text-transform:uppercase;
}
